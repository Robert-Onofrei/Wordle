<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wordle.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wordle"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="WORDLE"
            HorizontalOptions="Center"
            FontSize="Title"
            FontAttributes="Bold"
            Margin="0, 20, 0, 20" />
        
        <!--Grid to display word-->
        <Grid
            HorizontalOptions="Center"
            VerticalOptions="Center"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
            ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
            x:Name="WordGrid"
            Padding="5">
            
            <Frame Grid.Row="0" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="0" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="0" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="0" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="0" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />

            <Frame Grid.Row="1" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="1" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="1" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="1" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="1" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />

            <Frame Grid.Row="2" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="2" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="2" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="2" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="2" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />

            <Frame Grid.Row="3" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="3" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="3" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="3" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="3" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />

            <Frame Grid.Row="4" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="4" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="4" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="4" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="4" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />

            <Frame Grid.Row="5" Grid.Column="0" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="5" Grid.Column="1" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="5" Grid.Column="2" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="5" Grid.Column="3" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
            <Frame Grid.Row="5" Grid.Column="4" CornerRadius="5" BorderColor="Gray" WidthRequest="50" HeightRequest="50" />
        </Grid>

        <!--Keyboard Grid-->
        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="3">
                <Button Text="Q" />
                <Button Text="W" />
                <Button Text="E" />
                <Button Text="R" />
                <Button Text="T" />
                <Button Text="Y" />
                <Button Text="U" />
                <Button Text="I" />
                <Button Text="O" />
                <Button Text="P" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="3">
                <Button Text="A" />
                <Button Text="S" />
                <Button Text="D" />
                <Button Text="F" />
                <Button Text="G" />
                <Button Text="H" />
                <Button Text="J" />
                <Button Text="K" />
                <Button Text="L" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="3">
                <Button Text="Enter" WidthRequest="60" />
                <Button Text="Z" />
                <Button Text="X" />
                <Button Text="C" />
                <Button Text="V" />
                <Button Text="B" />
                <Button Text="N" />
                <Button Text="M" />
                <Button Text="⌫" WidthRequest="60" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
